<h1>List of Stores</h1>
<%= link_to 'Home', stores_path %> | 
<%= link_to 'New', new_store_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Prices</th>
      <th>Favorite</th>
      <th></th>
      <th></th>
      
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to store.name, store_path(store) %></td>
        <td><%= store.prices %></td>
        <td><%= store.favorite ? "X" : "" %></td>
        <td><%= link_to 'Edit', edit_store_path(store)%></td>
        <td><%= link_to 'Delete', store_path(store), method: 'delete' %></td>
      </tr>
    <% end %>
      
  </tbody>