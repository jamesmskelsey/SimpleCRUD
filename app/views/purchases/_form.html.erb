<%= form_with(model: @purchase, local: true) do |f| %>

  <% if @purchase.errors.any? %>
    <div id="error_explain">
      <h2> 
        <%= pluralize(@purchase.errors.count, "error") %> caused this purchase to not save.
      </h2>
      <ul>
        <% @purchase.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </p>

  <p>
    <%= f.label :store %><br>
    <%= f.select(:store_id, options_from_collection_for_select(Store.all, :id, :name)) %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>